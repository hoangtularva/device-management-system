<%= form_with model: request, class: "bg-white p-10" do |f| %>
  <div class="space-y-6">
    <div class="border-b border-gray-900/10 pb-6">
      <div class="grid gap-x-6 gap-y-8 sm:grid-cols-12">
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="sm:col-span-6">
          <%= f.label :device_id, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.select :device_id, selector_devices_by_office(@devices_by_office), {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-6">
          <%= f.label :type_request, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
           <%= f.select :type_request, selector_type_requests, {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-full">
          <%= f.label :reason, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2 rich-hidden-attachment">
            <%= f.rich_text_area :reason, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-full">
          <%= f.label :information, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2 rich-hidden-attachment">
            <%= f.rich_text_area :information, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>
    </div>
  <div>
  <div class="mt-6 flex items-center justify-start gap-x-6">
    <%= f.submit action_name&.to_sym == :edit ? t(".edit_request") : t(".add_request"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  <div>
<% end %>
