<li class="relative px-6 py-3">
  <% if navigation_active %>
      <span class="absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg" aria-hidden="true"></span>
  <% end %>
  <%= link_to navigation_path, class:"inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 #{"text-gray-800" if navigation_active }" do %>
    <i class="<%= navigation_icon %> w-5 h-5"></i>
    <span class="ml-4"><%= navigation_content %></span>
  <% end %>
</li>
