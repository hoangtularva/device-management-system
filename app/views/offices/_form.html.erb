<%= form_with model: office, url: (action_name&.to_sym == :edit ? company_office_path : company_offices_path), data: { turbo: false } do |f| %>
  <%= f.fields_for :office_infos do |office_info| %>
    <%= f.label :name %>
    <%= office_info.text_field :name %>

    <%= f.label :information %>
    <%= office_info.text_field :information %>

    <%= f.label :address %>
    <%= office_info.text_field :address %>

    <%= f.label :email %>
    <%= office_info.email_field :email %>

    <%= f.label :phone_number %>
    <%= office_info.telephone_field :phone_number %>
  <% end %>

  <%= f.submit action_name&.to_sym == :edit ? t(".edit_office") : t(".add_office") %>
<% end %>
